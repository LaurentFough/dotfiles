# VIM
if [ -f $CONFIGDIR/.vimrc ]; then
   alias vim="vim -u $CONFIGDIR/.vimrc"
   export EDITOR="vim -u $CONFIGDIR/.vimrc"
fi
if [ -f $CONFIGDIR/vimrc ]; then
   alias vim="vim -u $CONFIGDIR/vimrc"
   export EDITOR="vim  -u $CONFIGDIR/vimrc"

fi
if ! which vim &> /dev/null; then
	alias vim=vi
   export EDITOR=vi
fi

