function dload {
	URL=$1
	DEST=$2 
		( 
			which curl &> /dev/null && 
			curl $curlopts --progress-bar $URL > $DEST.tmp && 
			mv $DEST.tmp $DEST 
		) || 
		( 
			which wget &> /dev/null && 
			wget --no-check-certificate -O $DEST.tmp $URL && 
			mv $DEST.tmp $DEST; 
		); 
}

function bashup {
	pushd $CONFIGDIR > /dev/null
   git pull
	popd > /dev/null
}

